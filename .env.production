# ============================================================================
# APEX PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# This file should be encrypted and stored securely (use .env.production.local)
# Never commit actual secrets to version control
# ============================================================================

# MEMORY PLUGIN CONFIGURATION
MEMORY_PLUGIN_TOKEN=your_memory_plugin_token_here
MEMORY_PLUGIN_BASE_URL=https://www.memoryplugin.com
MEMORY_PLUGIN_API_VERSION=v2

# NOTION CONFIGURATION
NOTION_API_KEY=your_notion_api_key_here
NOTION_WORKSPACE_ID=your_workspace_id_here
NOTION_AGENTS_DB_ID=your_agents_database_id_here
NOTION_SOLUTIONS_DB_ID=your_solutions_database_id_here
NOTION_MEMORIES_DB_ID=your_memories_database_id_here
NOTION_SKILLS_DB_ID=your_skills_database_id_here

# OPENAI & ANTHROPIC
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# DATABASE CONFIGURATION
DB_PASSWORD=your_secure_postgres_password_here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mastermind
DB_USER=mastermind
POSTGRES_URL=postgresql://mastermind:${DB_PASSWORD}@postgres:5432/mastermind

# REDIS CONFIGURATION
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_CLUSTER_ENABLED=false
REDIS_TIMEOUT=30

# AWS S3 (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=apex-backups-production
AWS_S3_REGION=us-east-1

# SYSTEM CONFIGURATION
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# ORCHESTRATOR SETTINGS
MAX_WORKERS=8
MAX_ITERATIONS=5
TASK_TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2.0

# SYNC INTERVALS (in seconds)
MEMORY_SYNC_INTERVAL=300
NOTION_SYNC_INTERVAL=600
GITHUB_SYNC_INTERVAL=1800

# MONITORING & ALERTING
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your_secure_grafana_password_here
ALERT_EMAIL=ops@example.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# BACKUP CONFIGURATION
BACKUP_INTERVAL=86400
BACKUP_RETENTION=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# GITHUB INTEGRATION
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=GlacierEQ
GITHUB_REPO=mastermind

# SLACK INTEGRATION (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#apex-deployments

# RATE LIMITING
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600

# SECURITY
CORS_ORIGINS=http://localhost:3000,https://app.example.com
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# FEATURE FLAGS
FEATURE_MEMORY_PLUGIN=true
FEATURE_NOTION_SYNC=true
FEATURE_GITHUB_SYNC=true
FEATURE_AUTO_BACKUP=true
FEATURE_MONITORING=true
